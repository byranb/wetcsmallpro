.page_hd {
  padding: 10rpx;
}

.page_bd {
  padding-bottom: 0;
  display: flex;
  flex-flow: column;
}

.coupons {
  position: relative;
  display: flex;
  flex-flow: row;
  /* border: 1rpx solid #323232; */
  align-items: center;
  justify-content: space-around;
  margin: auto;
  width: 725rpx;
  /* background-color: #fff; */
  height: 213rpx;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  z-index: 0;
}

.coupons_bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.coupons_left{
  display: flex;
  flex-flow: column;
  justify-content: center;
  width:25%;
  align-items:center;
  /* margin-bottom:30rpx; */
}

.coupons_price{
  font-size:30rpx;
  font-weight:bold;
  color:#fff;
}

.coupons_price text{
  font-size:80rpx;
  font-family:Times-Bold;
  font-weight:bold;
  color:#fff;
}

.coupons_limit{
  font-size:20rpx;
  color:#fff;
  opacity:0.8;
}

.coupons_info{
  display: flex;
  flex-flow: column;
  justify-content: space-around;
  height:140rpx;
  /* margin-left:30rpx; */
  width: 64%;
}

.info_title{
  font-size:28rpx;
  color:rgba(50,50,50,1);
}

.info_explain{
  font-size:20rpx;
  color:rgba(150,150,150,1);
  /* border: 1rpx solid #C0C0C0; */
  border-radius: 15rpx;
  width:300rpx;
  text-align:left;
}

.info_date{
  font-size:18rpx;
  color:rgba(168,103,48,1);
}

.coupons_receive {
  height: 100%;
  width: 175rpx;
  align-items: center;
  justify-content: center;
  display: flex;
  position: absolute;
  right: 24rpx;
}

.coupons_btn {
  width: 160rpx;
  /* height: 60rpx; */
  border-radius: 30rpx;
  font-size:24rpx;
  color:#fff !important;
  /* line-height:1.9 !important; */
  padding: 0 !important;

}

.notyet{
  background-color: #D69D4B !important;
}

.notyet_font{
  color: #D69D4B !important;
}

.yet{
  background-color: #C0C0C0 !important;
}

.yet_font{
  color: #C0C0C0 !important;
}

.coupons_image {
  width: 90rpx;
  height: 90rpx;
  padding: 0 30rpx 0 30rpx;
  z-index:1;
}

.info_price {
  font-size: 24rpx;
  color: rgba(137, 153, 208, 1);
}

.info_price text {
  font-size: 60rpx;
  font-family: Times-Bold;
  font-weight: bold;
  color: rgba(137, 153, 208, 1);
}

.info_label {
  font-size: 18rpx;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  color: rgba(150, 150, 150, 1);
}

.coupons_rec {
  display: flex;
  flex-flow: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 470rpx;
}

.rec_close {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  right: 0;
  top: 0;
  margin: 50rpx 50rpx;
}

.rec_title {
  font-size: 40rpx;
  color: rgba(100, 100, 100, 1);
  /* margin-bottom: 100rpx; */
}

.rec_tip {
  font-size: 32rpx;
  color: rgba(150, 150, 150, 1);
  margin: 0 10rpx 30rpx 10rpx;
}

.rec_tip_text {
  font-size: 22rpx;
  color: rgba(150, 150, 150, 1);
  margin-bottom: 35rpx;
  text-align:left;
}

.rec_sub {
  width: 320rpx;
  height: 85rpx;
  margin: 30rpx 0 30rpx 0;
  font-size:32rpx !important;
}

.explain_title{
    width:90%;
    height:90rpx;
    line-height:36rpx;
    text-align:center;
}

.explain_line{
    display:inline-block;
    width:200rpx;
    border-top:1px solid #cccccc;
    vertical-align:10rpx;  
}

.no_data {
  display: flex;
  width: 750rpx;
  flex-flow: column;
  align-items: center;
  justify-content: center;
  margin: auto;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  background-color: #ffffff;
}

.no_data image {
  width: 460rpx;
  height: 340rpx;
}

.no_data text {
  font-size: 24rpx;
  color: rgba(150, 150, 150, 1);
}