.modle {
  width: 100%;
  height: 130rpx;
  margin-top: 20rpx;
  box-shadow: 0px -1px 1px -1px #ececec inset;
}

.modle .mol {
  width: 100%;
  height: 64rpx;
  position: relative;
  margin-left:50rpx;
}

.mol-line {
  width: 100%;
  height: 4rpx;
  background-color: #e6e6e6;
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
}

.mol-ites {
  width: 100%;
  height: 100%;
  position: absolute;
}

.mol-ites .ite {
  width: 64rpx;
  height: 64rpx;
  box-sizing: border-box;
  /* position: relative; */
  position: absolute;
  left: 0;
  top: 0;
  z-index: 2;
}

.ite .ite-image{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.mol-ites .ite .n {
  width: 44rpx;
  height: 44rpx;
  line-height: 50rpx;
  text-align: center;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  font-size: 20rpx;
  color: #ABABAB;
}

.mol-ites .ite::after {
  content: "";
  width: 80rpx;
  height: 4rpx;
  background-color: transparent;
  position: absolute;
  left: 52rpx;
  top: 50%;
  margin-top: -2rpx;
  z-index: 2;
}

.mol-ites .ite:last-of-type::after {
  width: 0;
}

.mol-ites .ite:nth-of-type(2) {
  left: 107rpx;
}

.mol-ites .ite:nth-of-type(3) {
  left: 214rpx;
}

.mol-ites .ite:nth-of-type(4) {
  left: 321rpx;
}

.mol-ites .ite:nth-of-type(5) {
  left: 428rpx;
}

.mol-ites .ite:nth-of-type(6) {
  left: 535rpx;
}

.mol-ites .ite:nth-of-type(7) {
  left: 642rpx;
}

.mol-ites .ite .n.hover {
  color: #FE6582;
}

