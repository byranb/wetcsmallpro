  padding-bottom: 20rpx;
}

.apply_buy {
  display: flex;
  align-items: center;
  margin: auto;
  padding-top: 40rpx;
}

.apply_agree {
  font-size: 24rpx;
  color: rgba(50, 50, 50, 1);
  text-align: center;
}

.apply_agreement {
  font-size: 24rpx;
