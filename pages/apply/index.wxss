  border-radius: 5px;
}

.apply_input_btn {
  height: 68rpx;
  background-color: #fff !important;
  margin: 0 5rpx 0 5rpx;
}

.ad_images {
  width: 750rpx;
  height: 3504rpx;
}

.coupons_rec {
  display: flex;
  flex-flow: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 480rpx;
}

.rec_close {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  right: 0;
  top: 0;
  margin: 50rpx 50rpx;
}

.rec_title {
  font-size: 40rpx;
  color: rgba(100, 100, 100, 1);
  margin-top: 100rpx;
}

.rec_tip_text {
  font-size: 22rpx;
  color: rgba(150, 150, 150, 1);
  margin-bottom: 50rpx;
}

.rec_sub {
  width: 330rpx;
  height: 80rpx;
  margin: 30rpx 0 30rpx 0;
}

.plate-nums-first {
  /* flex: 1; */
  width: 80rpx;
  height: 80rpx;
  border: 2rpx solid #ccc;
  margin: 0 5rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  /* height: 100%; */
  box-sizing: border-box;
  border-radius: 4rpx;
  background-color: #fff;
}

.plate-nums-first.energy {
  border-style: dashed;
}

.plate-nums-first.plate-nums-foc {
  /* border-color: #00bf70; */
  border-style: solid;
}

/*  动画闪烁颜色  */

@keyframes plate-nums-foc {
  from {
    -webkit-box-shadow: 0 0 9px #00DD00;
  }

  50% {
    -webkit-box-shadow: 0 0 18px #00AA00;
  }

  to {
    -webkit-box-shadow: 0 0 9px #00DD00;
  }
}

.plate-nums-anim {
  animation-iteration-count: infinite;
}

.plate-nums-foc.plate-nums-anim {
  animation-name: plate-nums-foc;
  animation-duration: 5s;
}

.special {
  font-size: 20rpx;
  display: flex;
  flex-flow: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  color:rgba(150, 150, 150, 1);
}

.plate-num-text {
  flex: 1;
  line-height: 72rpx;
  /* height: 100%; */
  box-sizing: border-box;
  border-radius: 4rpx;
  font-size: 36rpx;
  font-weight: normal;
  height: 100%;
  width: 100%;
}

.apply-intro {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  width: 665rpx;
}

.apply-intro image {
  display: block;
  margin: 0 16rpx;
  height: 156rpx;
}

.apply_title .green-border {
  position: relative;
  display: inline-block;
}

.apply_title .green-border::after {
  content: ' ';
  position: absolute;
  left: 0;
  right: 0;
  bottom: -10rpx;
  margin: 0 auto;
  width: 70%;
  height: 4rpx;
  background-color: #1aad19;
}

.flow-intro {
  padding: 20rpx 30rpx;
}

.flow-intro .flow {
  width: 80rpx;
  font-family: 'Microsoft YaHei';
}

.flow-line {
  flex: 1;
  display: flex;
  align-items: center;
  height: 4rpx;
}

.flow-line::after {
  content: '';
  display: block;
  width: 80%;
  height: 3rpx;
  background-color: #000;
}

.apply-flow {
  padding-top: 50rpx;
  padding-bottom: 30rpx;
  background-color: #fff;
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
}

.superiority-intro {
  margin-top: 30rpx;
  margin-bottom: 40rpx;
}

.superiority {
  display: flex;
  flex-wrap: wrap;
}

.superiority-item {
  width: 50%;
  padding: 4rpx 20rpx;
  box-sizing: border-box;
}

.superiority-item image {
  height: 150rpx;
  width: 100%;
}

.superiority-intro .compare {
  padding: 6rpx 20rpx;
}

.compare image {
  height: 232rpx;
  width: 100%;
}
