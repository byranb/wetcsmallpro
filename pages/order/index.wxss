page{
  height: 100%;
  background-color: #fff;
}
.page_hd{
  display: flex;
  flex-flow: column;
  align-items: center;
  /* height: 375rpx; */
  background-color: #F8F8F8;
}
.page_bd{
  width: 750rpx;
  height:925rpx;
  padding-bottom: 0rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  flex-flow: column;
}
.page_ft{
  background-color: #fff;
}
.order_rec{
  display: flex;
  flex-flow: row;
  margin: 12rpx auto;
  align-items: center;
  justify-content: space-around;
}
.order_text{
  width: 125rpx;
  font-size:24rpx;
  color:rgba(100,100,100,1);
  margin-right: 20rpx;
  text-align:right;
}
.order_input{
  width:504rpx;
  height:68rpx;
  background-color: #ffffff;
  display: flex;
  margin: auto;
  align-items: center;
}
.order_input input{
  width: 100%;
  margin: 15rpx;
  font-size:26rpx;
}
.order_input_placeholder{
  font-size:26rpx;
}
.upload_pic{
  display: flex;
  flex-flow: column;
  position: relative;
  width: 336rpx;
  height: 290rpx;
  margin:10rpx 0 10rpx 0;
  align-items: center;
   z-index: 0;
}
.upload_background {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.upload_sucess{
  width:200rpx;
  height:135rpx;
  margin-top:50rpx;
}
.upload_pic text{
  font-size:24rpx;
  color:rgba(255,255,255,1);
  position:absolute;
  bottom: 18rpx;
  text-align: center;
}

.order_upload{
  display: flex;
  flex-flow: row;
  flex-wrap: wrap;
  margin: auto;
  justify-content:center;
}

.order_sub{
  width: 670rpx;
  height: 80rpx;
  /* margin: 30rpx 0 30rpx 0; */
  margin: 30rpx auto;
}
.order_tab{
  margin: 0rpx 110rpx;
}

.order_cer{
  height: 100%;
}

.order_build {
  display: flex;
  width: 750rpx;
  flex-flow: column;
  align-items: center;
  justify-content: center;
  margin: 200rpx auto;
  background-color: #ffffff;
}

.order_build image {
  width: 376rpx;
  height: 380rpx;
}

.order_build text {
  font-size: 24rpx;
  color: rgba(150, 150, 150, 1);
}

.order_explain{
  display: flex;
  flex-flow: column;
  width: 660rpx;
  margin: 40rpx auto;
}

.explain_title{
  font-size:28rpx;
  color:#111111;
}

.explain_text{
  font-size:24rpx;
  color:#646464;
}



